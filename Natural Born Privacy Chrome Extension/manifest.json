{
  "name": "Private Lennon",
  "description": "Make the current page unreadable unless you read it through red glasses",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Natural Born Privacy",
    "default_icon": "icon.png"
  },
  "manifest_version": 2
}